<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relLayoutF"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/bluegrey50"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/imageDish"
        android:layout_width="?android:attr/listPreferredItemHeight"
        android:layout_height="?android:attr/listPreferredItemHeight"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/textDishName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="19dp"
        android:layout_toRightOf="@+id/imageDish"
        android:maxLines="1"
        android:text="Name dish"
        android:textColor="#040404"
        android:textSize="18sp"
        android:textStyle="bold"
        android:typeface="sans" />

    <TextView
        android:id="@+id/noOrdersText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textDishName"
        android:layout_alignParentTop="true"
        android:layout_marginTop="3dp"
        android:text="@string/orderFromString" />

    <TextView
        android:id="@+id/deleteOrderBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="24dp"
        android:background="@drawable/rounded_corner_btn"
        android:gravity="center"
        android:minWidth="50dp"
        android:text="@string/deleteString"
        android:textColor="@color/white"
        android:visibility="invisible" />
 
</RelativeLayout>